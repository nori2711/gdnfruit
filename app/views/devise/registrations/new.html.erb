<div class="contents-login contents-login-new">
  <h2>ユーザー新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :name, placeholder: 'お名前', style: 'width: 250px;height: 30px;font-size: 15px;padding: 0 10px;margin: 10px' %>
    </div>

    <div class="field">
      <%= f.text_field :address1, placeholder: '郵便番号(ハイフンなし)', style: 'width: 250px;height: 30px;font-size: 15px;padding: 0 10px;margin: 5px' %>
    </div>

<!--     <div class="field">
      <%= f.text_field :address2, placeholder: '都道府県', style: 'width: 250px;height: 30px;font-size: 15px;padding: 0 10px;margin: 0px' %>
    </div>

    <div class="field">
      <%= f.text_area :address3, placeholder: '市区町村、番地、建物名など', style: 'width: 250px;height: 70px;font-size: 15px;padding: 0 10px;margin: 5px' %>
    </div> -->

    <div class="field">
      <%= f.text_field :nickname,autofocus: true, maxlength: "6", placeholder: 'ニックネーム(最大６文字)', style: 'width: 250px;height: 30px;font-size: 15px;padding: 0 10px;margin: 5px 0 5px 0' %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: 'Eメールアドレス', style: 'width: 250px;height: 30px;font-size: 15px;padding: 0 10px;margin: 0 0 10px 0' %>
    </div>

    <div class="field">
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワード(最小６文字)', style: 'width: 250px;height: 30px;font-size: 15px;padding: 0 10px;margin: 5px' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワード再入力', style: 'width: 250px;height: 30px;font-size: 15px;padding: 0 10px;margin: 0 0 15px 0' %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn--block" do %>
      <% end %>
    </div>
  <% end %>
  <div style="background-color: rgba(169,169,169,0.4);">
    <%= render "devise/shared/links" %>
  </div>
</div>
